<?xml version="1.0"?>
<robot name="Assignment_1">

  <material name="blue">
    <color rgba="0.46 0.54 0.93 1"/>
  </material>

  <material name="white">
    <color rgba="1 1 1 1"/>
  </material>

  <material name="lime">
    <color rgba="0.47 0.96 0.34 1"/>
  </material>

  <link name="world"/>

  <link name="arm_piece_1">
    <visual>
      <geometry>
        <box size="0.1 0.1 1"/>
      </geometry>
      <material name="blue"/>
    </visual>
    <collision>
      <geometry>
        <box size="0.1 0.1 1"/>
      </geometry>
    </collision>
  </link>

  <link name="arm_piece_2">
    <visual>
      <geometry>
        <box size="0.1 0.1 0.9"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0.1 0.4"/>
      <material name="lime"/>
    </visual>
    <collision>
      <geometry>
        <box size="0.1 0.1 0.9"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0.1 0.4"/>
    </collision>
  </link>

  <link name="arm_piece_3">
    <visual>
      <geometry>
        <box size="0.1 0.1 0.7"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0.3"/>
      <material name="blue"/>
    </visual>
    <collision>
      <geometry>
        <box size="0.1 0.1 0.7"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0.3"/>
    </collision>
  </link>

  <link name="end_effector">
    <visual>
      <geometry>
        <box size="0.1 0.1 0"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <material name="lime"/>
    </visual>
    <collision>
      <geometry>
        <box size="0.1 0.1 0"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0"/>
    </collision>
  </link>

  <joint name="world_to_arm_piece_1" type="continuous">
    <parent link="world"/>
    <child link="arm_piece_1"/>
    <origin rpy ="0 0 0" xyz="0 0 0.5"/>
    <axis xyz = "0 0 1"/>
  </joint>

  <joint name="arm_piece_1_to_2" type="revolute">
    <parent link="arm_piece_1"/>
    <child link="arm_piece_2"/>
    <origin rpy ="0 0 0" xyz="0 0 0.45"/>
    <limit effort="1000" lower="0" upper="6.283" velocity="0"/>
    <axis xyz="0 1 0"/>
  </joint>

  <joint name="arm_piece_2_to_3" type="revolute">
    <parent link="arm_piece_2"/>
    <child link="arm_piece_3"/>
    <origin rpy ="0 0 0" xyz="0 0 0.8"/>
    <limit effort="1000" lower="0" upper="6.283" velocity="0"/>
    <axis xyz="0 1 0"/>
  </joint>

  <joint name="arm_piece_3_to_end_effector" type="fixed">
    <parent link="arm_piece_3"/>
    <child link="end_effector"/>
    <origin rpy ="0 0 0" xyz="0 0 0.65"/>
  </joint>

</robot>
